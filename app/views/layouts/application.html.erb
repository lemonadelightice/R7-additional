<!DOCTYPE html>
<html>
  <head>
    <title>R7Additional</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
   </head>

  <body>

      <!-- Bootstrap danger alert for flash[:alert] --> 
       <% if flash[:alert].present? %> 
         <div class="alert alert-danger alert-dismissible fade show" role="alert"> 
           <%= flash[:alert] %> 
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
         </div> 
       <% end %> 

      <!-- Bootstrap success alert for flash[:notice] -->
       <% if flash[:notice].present? %> 
         <div class="alert alert-success alert-dismissible fade show" role="alert"> 
           <%= flash[:notice] %> 
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
         </div> 
       <% end %> 

    <div class="banner-background text-white">  
      <div class="container-fluid">
        <h1>Customers and Orders</h1>
        <p>View. edit, or delete customers and orders</p>  
      </div>
    </div>   

    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" data-turbo="false">Customers</a>
        <ul class="dropdown-menu">
          <li><%= link_to "Customer List", customers_path, class: "dropdown-item" %></li>
          <li><%= link_to "New Customer", new_customer_path, class: "dropdown-item" %></li>
        </ul>
      </li>
    

      <li class="nav-item dropdown">
        <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Orders</a>
        <ul class="dropdown-menu">
          <li><%= link_to "Order List", orders_path, class: "dropdown-item" %></li>
          <li><%= link_to "New Order", new_order_path, class: "dropdown-item" %></li>
        </ul>
      </li>
    </ul>
      
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>


